{
  "name": "watchcopy",
  "version": "0.1.0",
  "description": "Watch a folder for changes and copy matching files to target",
  "main": "lib/watchcopy.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "babel -d lib/ src/",
    "watch": "babel --watch -d lib/ src/",
    "prepublish": "npm run build"
  },
  "bin": {
    "wtcp": "lib/watchcopy.js"
  },
  "preferGlobal": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/elankath/watchcopy.git"
  },
  "keywords": [
    "es6",
    "watch",
    "copy",
    "node.js"
  ],
  "author": "Tarun R Elankath <dev@elankath.com> (https://github.com/lenkite/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/elankath/watchcopy/issues"
  },
  "homepage": "https://github.com/elankath/watchcopy",
  "devDependencies": {
    "babel": "^4.7.16"
  },
  "dependencies": {
    "chokidar": "^1.0.0-rc4",
    "core-js": "^0.7.2",
    "docopt": "^0.6.1",
    "fs-extra": "^0.16.5",
    "osenv": "^0.1.0"
  }
}
